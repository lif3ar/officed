- unless current_user.contacts.blank?
  %table.highlight.bordered
    %thead
      %tr
        %th Name
        %th Company
        %th Email
        %th Phone
        %th Location
    %tbody
      - current_user.contacts.each do |contact|
        %tr{"data-link": (url_for [contact])}
          %td= link_to contact.name, contact
          %td= contact.company
          %td= contact.email
          %td= contact.mobile
          %td= "#{contact.city} #{contact.street} #{contact.state} #{contact.country} #{contact.zip}"
- else
  = link_to "Add Contact", new_contact_path, class: "btn z-depth-0"
