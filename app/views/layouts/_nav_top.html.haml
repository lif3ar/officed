%nav.white.z-depth-0
  %ul.right.hide-on-small-only
    - if user_signed_in?
      %li= link_to "My profile", edit_user_registration_path, class: "grey-text text-darken-3 blue-button"
      %li= link_to "Sign out", destroy_user_session_path, method: :delete, class: "grey-text text-darken-3 red-button"
      - if current_user.avatar?
        = image_tag(current_user.avatar(:small), class: "modal-trigger img-responsive navbar-user-image", size: '64', href: "#modal1")
      - else
        = image_tag('no_avatar.png', class: "modal-trigger img-responsive navbar-user-image", size: '64', href: "#modal1")
    - else
      %li= link_to "Sign Up", new_user_registration_path, class: "grey-text text-darken-3 green-button"
      %li= link_to "Log in", new_user_session_path, class: "grey-text text-darken-3 blue-button"